<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/iteam_song"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/bottom_nav"
    android:background="@color/black"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >
        <ImageView
            android:layout_marginVertical="10dp"
            android:id="@+id/iv_ImagePlaylist"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/amee"
            android:layout_marginEnd="8dp"
            ></ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:padding="5dp"
            >
            <TextView
                android:id="@+id/tv_playlistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bước qua nhau"
                android:textSize="15sp"
                android:textColor="@color/white">
            </TextView>
            <TextView
                android:id="@+id/tv_playlistTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dế choắt"
                android:textSize="16sp"
                android:textColor="#B3ADAD"
                android:layout_below="@id/tv_playlistName">
            </TextView>
            <CheckBox
                android:id="@+id/checkbox"
                android:button="@drawable/custom_checkbox"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"/>

        </RelativeLayout>

</LinearLayout>