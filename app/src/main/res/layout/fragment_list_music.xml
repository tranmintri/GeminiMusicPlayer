<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_list_music"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Fragment_ListMusic"
    android:background="@color/black">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="25dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:orientation="vertical"
        android:background="@color/black">
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back"
            />
        <TextView
            android:id="@+id/tv_titleLíst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên PlayList"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="22sp"
            android:layout_alignBaseline="@id/tv_back"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/iv_detail_playList"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
android:layout_below="@id/tv_back"
            android:scaleType="centerCrop"
            android:src="@drawable/searchlink1"
            android:layout_centerHorizontal="true"
            ></ImageView>

        <TextView
            android:id="@+id/tv_play_list_music"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/play_circle_green"
            android:layout_marginTop="40dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/iv_detail_playList"
            ></TextView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_detail_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_detail_playList"
            android:layout_marginTop="120dp"/>
    </RelativeLayout>





</androidx.core.widget.NestedScrollView>