<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyPopupMenuStyle" parent="@android:style/Widget.PopupMenu">
        <item name="android:textSize">16sp</item> <!-- Kích thước chữ được chỉnh ở đây -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#000000</item>
    </style>
    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- border color -->
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>

        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">@color/white</item>
        <!-- The color of the label in all other text field states (such as resting and disabled) -->
        <item name="android:textColorHint">@color/white</item>
    </style>

</resources>